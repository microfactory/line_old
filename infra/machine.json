{
  "Comment": "A state machine that eventually schedules tasks on workers",
  "StartAt": "Run",
  "States": {
    "Run": {
      "Retry" : [{
        "ErrorEquals": ["States.Timeout"],
        "IntervalSeconds": 2,
        "MaxAttempts": 9999999,
        "BackoffRate": 1
      }],
      "End": true,
      "Type": "Task",
      "Resource": "${run_act_arn}",
      "TimeoutSeconds": 31622400,
      "HeartbeatSeconds": 60
    }
  }
}
